[Unit]
Description=Sausage-store

[Service]
User={{backend_user}}
Environment=REPORT_PATH=/var/www-data/htdocs
Environment=LOG_PATH=/
StandardOutput=file:{{backend_path}}/logs/out.log
Restart=always
ExecStart=/usr/bin/java -jar '{{backend_path}}/sausage-store.jar'
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
